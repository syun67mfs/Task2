<main>
  <h1>Editing Book</h1>
  <%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, class: "btitle" %>
    <h4>Body</h4>
    <%= f.text_area :body, class: "bbody" %>
    <p><%= f.submit 'Update Book' %></p>
    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path %>
  <% end %>
  
</main>