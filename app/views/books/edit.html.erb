<main>
  <h1>Editing Book</h1>
  <%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
        <h3><%= @book.errors.count %> error prohibited this book from being saved:</h3>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>
    <h4>Title</h4>
    <%= f.text_field :title, class: "btitle" %>
    <h4>Body</h4>
    <%= f.text_area :body, class: "bbody" %>
    <p><%= f.submit 'Update Book' %></p>
    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path %>
  <% end %>
  
</main>